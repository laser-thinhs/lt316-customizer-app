# PostgreSQL connection string
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/lt316_proof_builder?schema=public"

# Optional (future use)
NEXT_PUBLIC_APP_NAME="LT316 Proof Builder"

# Layer 2.2 limits
BATCH_MAX_ROWS="500"
CSV_MAX_SIZE_BYTES="1048576"
PLACEMENT_ROUNDING_MM="0.001"
BATCH_CREATE_RATE_LIMIT_PER_MIN="10"

# Local asset storage root
STORAGE_ROOT="./storage"

# Tracer provider switching
TRACER_PROVIDER="local"
TRACER_SERVICE_URL="http://localhost:4010"
TRACER_SERVICE_API_KEY=""
TRACER_TIMEOUT_MS="15000"

# API Authentication
# - Production/Staging (VERCEL_ENV=production|preview): ALWAYS required
# - Development/Local: Set API_AUTH_REQUIRED=true to enable, false to disable (default)
# - Tests: Set API_AUTH_REQUIRED_IN_TEST=true to enforce (default false)
# NOTE: Use a strong random key (32+ chars) in production. Generate with: openssl rand -base64 32
API_AUTH_REQUIRED="false"
API_AUTH_REQUIRED_IN_TEST="false"
API_KEY=""

# Public API endpoints (no auth required):
#   GET /api/health - App and DB connectivity status
#   GET /api/fonts - Available font registry
#   GET /api/product-profiles - Product catalog (read-only)
#   GET /api/product-profiles/:id - Product details
#   GET /api/assets/:id - Fetch stored asset file
#
# All other routes require x-api-key and x-actor-role headers when auth is enabled.

# Studio (dev-only)
STUDIO_ENABLED="false"
STUDIO_PASSWORD=""
STUDIO_AI_URL="http://studio-ai:8010"
OPENAI_API_KEY=""
OPENAI_MODEL="gpt-4o-mini"
